#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show all events whose title matches WHAT NUMBER UNIT [CONTEXT ...], extract all
NUMBER(s) for each UNIT and show their sums. This tally is followed by a summary
of the total duration and date range in which they were scheduled.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '"WHAT [CONTEXT ...]" [KHAL-ARGS ...] [-?|-h|--help]'
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color)	shift;;	# Ignore color flag; tally doesn't use highlighting.
esac
if [[ "$1" =~ ^([^[:space:]]+)[[:space:]]+(.*)$ ]]; then
    what="${BASH_REMATCH[1]}"
    context="${BASH_REMATCH[2]:+ }${BASH_REMATCH[2]}"
else
    what="${1:?}"
    context='\([[:space:]].*\)\?'
fi; shift

KHAL_GREP_DATERANGE=1970-01-01 \
exec khal-grep --color=never \
    --process 'field 1 2 3 4 5 6' \
    --process 'sumField --group-by -1 --result-first -2' \
    -e "\\b${what} [[:digit:]]\\+ [[:alpha:]]\\+${context}\$" \
    "$@"
