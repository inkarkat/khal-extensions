#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Show all events from DAY, followed by the total duration.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-y|--summary-only|-Y|--no-summary] [KHAL-COMMAND|KHAL-LIST-ARGS ...] DAY [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    echo 'ERROR: No DAY passed.'
    echo
    printUsage "$0"
    exit 2
fi >&2

exec khal-timespan "$@" eod
